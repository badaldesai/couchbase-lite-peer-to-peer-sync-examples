<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P2PListSync.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand" Padding="5,20,5,5" Margin="5">
            <Label Text="Inventory Tracker" FontSize="Large" HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="usernameEntry" Placeholder="username" />
            <Entry x:Name="passwordEntry" IsPassword="true" Placeholder="password" />
            <Button Text="Sign In" Clicked="OnLoginButtonClicked" />
            <Label x:Name="messageLabel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>