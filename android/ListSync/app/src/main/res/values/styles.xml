<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ListSync" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/pale_yellow</item>
        <item name="colorPrimaryVariant">@color/orange_A400</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/red_500</item>
        <item name="colorSecondaryVariant">@color/pink_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
    </style>

    <style name="Theme.ListSync.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ListSync.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.ListSync.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ListSync.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:paddingStart">@dimen/button_pad</item>
        <item name="android:paddingEnd">@dimen/button_pad</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_mid</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_mid</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Label">
        <item name="android:textStyle">bold</item>
    </style>

</resources>